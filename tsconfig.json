{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "electra-js.d.ts",
    "src/**/*",
    "test/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
